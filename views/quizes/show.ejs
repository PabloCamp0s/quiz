<form method="get" action="/quizes/<%= quiz.id %>/answer">
  <p>
    Pregunta: <%= quiz.pregunta %>
  </p>

  <p>
    <input type="text" name="respuesta" placeholder="Responda aquÃ­" />
    <input type="submit" value="Enviar" />
  </p>
</form>

<p>
  <a href="/quizes/<%= quiz.id %>/comments/new">
    <button>Nuevo comentario</button>
  </a>
</p>

<p>
  <strong>Comentarios:</strong>
</p>

<% quiz.Comments.forEach(
function ( comment )
{
if ( comment.publicado || session.user ) { %>
<p>
  - <%= comment.texto %>
  <% if ( session.user && !comment.publicado ) { %>
<form id="publish" method="post" action="/quizes/<%= quiz.id %>/comments/<%= comment.id %>?_method=put"></form>
<a href="#" onclick="$( 'form#publish' ).submit()">Publicar</a>
<% } %>
</p>
<% } %>
<% } ) %>
